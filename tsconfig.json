{
  "include": [
    "api/**/*",
    "app/**/*",
    "config/**/*",
    "services/**/*",
    "middlewares/**/*",
    "index.ts",
  ],
  "exclude": ["node_modules", "mocks"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "build-server",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]  
  }
}
